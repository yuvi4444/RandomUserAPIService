<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomUserAPIService.Views.MainPage">
    

    
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" >
        <Label Text="Random User" FontSize="40" />
        <Image Source="{Binding User.Picture.Large}" WidthRequest="150" HeightRequest="200" />
        <Label Text="{Binding User.Name.First}" FontSize="18" HorizontalOptions="Center" />
        <Label Text="{Binding User.Name.Last}" FontSize="18" HorizontalOptions="Center" />
        <Label Text="{Binding User.Email}" FontSize="18" HorizontalOptions="Center" />
    </StackLayout>
    
</ContentPage>